<div class="container">
<h1>统计一览</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>话题</th>
      <th>问题</th>
      <th>提交时间</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |r| %>
      <tr>
        <!-- <td><img src=image_path("images/icon.png")></td> -->
        <td><%= r.ppt %></td>
        <td><%= r.comment %></td>
        <td><%= r.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
